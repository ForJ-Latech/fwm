      <artifactId>ormlite-core</artifactId>
      <version>5.0</version>
    </dependency>
    <dependency>
      <groupId>com.j256.ormlite</groupId>
      <artifactId>ormlite-jdbc</artifactId>
      <version>5.0</version>
    </dependency>
    
    <!-- h2: this is what makes ./ignore/world.db -->
    <dependency>
      <groupId>com.h2database</groupId>
